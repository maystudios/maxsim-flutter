{
  "enabledPlugins": {
    "ralph-skills@ralph-marketplace": true
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/block-dangerous.sh",
            "timeout": 5
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/remind-quality.sh",
            "timeout": 5
          }
        ]
      }
    ]
  }
}
